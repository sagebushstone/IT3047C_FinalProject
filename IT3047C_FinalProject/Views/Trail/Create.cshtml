@model IT3047C_FinalProject.Models.Trail

@{
    ViewData["Title"] = "Add Trail";
}

<div class="trail-background">
    <h2>Add Trail</h2>

    <form asp-action="Create">

        <div class="form-group">
            <label class="control-label">Trail Name</label>
            <input asp-for="TrailName" class="form-control w-50" />
            <span asp-validation-for="TrailName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="State"></label>
            <input asp-for="State" class="form-control w-50" />
        </div>

        <div class="form-group">
            <label asp-for="Park"></label>
            <input asp-for="Park" class="form-control w-50" />
        </div>

        <div class="form-group">
            <label class="control-label">Difficulty</label>
            <input asp-for="DifficultyLevel" class="form-control w-50" type="number" min="1" max="10" />
            <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control w-50"></textarea>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Trail" class="btn btn-secondary">Cancel</a>
    </form>
</div>
