<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IT3047C_FinalProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IT3047C_FinalProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="layout-header">
        @{
            var title = ViewData["Title"] as string;
            if (string.IsNullOrWhiteSpace(title))
            {
                var page = ViewContext.RouteData.Values;
                title = (page["page"] ?? page["action"] ?? page["controller"])?.ToString();
            }
        }
        <h1>@title</h1>
    </header>

    <div class="content-wrapper">
        <div class="page-inner">
            <aside class="global-nav-col">
                <nav class="global-nav" aria-label="Main navigation">
                    <a class="btn-nav" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="btn-nav" asp-area="" asp-controller="Gear" asp-action="Gear">Gear</a>
                    <a class="btn-nav" asp-area="" asp-controller="Trail" asp-action="Trail">Trail</a>
                </nav>
            </aside>

            <main class="main-content" role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            <div class="text-center">© @DateTime.Now.Year - IT3047C_FinalProject</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
