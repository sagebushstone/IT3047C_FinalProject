@model IT3047C_FinalProject.Models.Trail

@{
    ViewData["Title"] = "Delete Trail";
}

<div class="trail-background">
    <h2>Delete Trail</h2>

    <h3>Are you sure you want to delete this trail?</h3>

    <div>
        <strong>@Model.TrailName</strong><br />
        State: @Model.State <br />
        Park: @Model.Park <br />
        Difficulty: @Model.DifficultyLevel
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TrailId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Trail" class="btn btn-secondary">Cancel</a>
    </form>
</div>
